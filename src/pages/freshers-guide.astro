---
import Layout from "../layouts/Layout.astro";
import Card from "../components/freshers-guide/Card.astro";
import generalCouncilIcon from "../images/icons/general_council.png";
import messCouncilIcon from "../images/icons/mess_council.png";
import elanIcon from "../images/icons/elan.png";
import ecellIcon from "../images/icons/ecell.png";
import busIcon from "../images/icons/bus.svg";
import mapIcon from "../images/icons/map.svg";
// Fallback/Generic icon if needed, or reuse generalCouncilIcon
---

<Layout title={"Fresher's guide"}>
  <div class="p-8 md:p-12">
    <div class="">
      <div class="bg-r h-[6px] w-full self-center mb-6">
        <div class="bg-p h-[6px] w-16 ml-16"></div>
      </div>
    </div>
    <h1 class="font-bold text-center text-5xl md:text-7xl md:text-left lg:text-8xl text-white">
      Student's Guide
    </h1>
  </div>

  <div class="p-8 lg:px-[6rem] pt-0 text-white">
    <h2 class="text-3xl font-bold mb-8 text-center md:text-left">Important Links</h2>
    <div class="flex justify-center mb-16">
      <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8">
        <Card
          title="AIMS Portal"
          link="https://aims.iith.ac.in/aims/"
          img={generalCouncilIcon}
          alt="AIMS"
        />
        <Card
          title="IITH VPN Guide"
          link="https://support.comp.iith.ac.in/kb/faq.php?id=21"
          img={generalCouncilIcon}
          alt="VPN"
        />
        <Card
          title="SVA Portal (Mess)"
          link="https://sva.iith.ac.in/"
          img={messCouncilIcon}
          alt="SVA"
        />
        <Card
          title="Bus Schedule"
          link="https://iith.ac.in/bus_schedule/"
          img={busIcon}
          alt="Bus"
        />
        <!-- <Card
          title="Cab Sharing"
          link="https://cabsharing.iith.dev/"
          img={generalCouncilIcon}
          alt="Cab"
        /> -->
        <Card
          title="Campus Map"
          link="https://www.scribblemaps.com/maps/view/IITH-Map/SIH2019"
          img={mapIcon}
          alt="Map"
        />
        <Card
          title="Mess Menu"
          link="https://docs.google.com/spreadsheets/d/1EkUAw7OacEpP9bd8d7E1Uc_PJjr4mwUw/edit?gid=673805417#gid=673805417"
          img={messCouncilIcon}
          alt="Map"
        />
      </div>
    </div>

    <h2 class="text-3xl font-bold mb-8 text-center md:text-left">Constitutions & Documents</h2>
    <div class="flex justify-center mb-16">
      <div class="grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-8">
        <Card
          title="Constitution"
          link="/documents/gymkhana constitution.pdf"
          img={generalCouncilIcon}
          alt="Constitution"
        />
        <Card
          title="Elan & nVision"
          link="/documents/Elan & Î·Vision 2023 Documentation.pdf"
          img={elanIcon}
          alt="Elan"
        />
        <Card
          title="E-Cell Prospectus"
          link="/documents/E-Cell IITH Prospectus.pdf"
          img={ecellIcon}
          alt="E-Cell"
        />
        <Card
          title="Student's Handbook"
          link="/documents/Academic Handbook 2022 (50th senate).pdf"
          img={generalCouncilIcon}
          alt="Handbook"
        />
      </div>
    </div>
  </div>
</Layout>